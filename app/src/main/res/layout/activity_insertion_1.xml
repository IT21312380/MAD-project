<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertionActivity1">


    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#417306"
        android:orientation="horizontal"
        android:weightSum="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="11"
            android:layout_marginStart="100dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Add to Market"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/etSellerName"
        android:layout_width="373dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        android:background="@color/material_dynamic_neutral90"
        android:hint="Seller's Name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColorHint="@color/material_dynamic_neutral40"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUnitPrice"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="376dp"
        android:layout_height="53dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="31dp"
        android:background="@color/material_dynamic_neutral90"
        android:hint="Mobile No"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColorHint="@color/material_dynamic_neutral40"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSellerName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etdiscription"
        android:layout_width="375dp"
        android:layout_height="87dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="27dp"
        android:background="@color/material_dynamic_neutral90"
        android:hint="Description"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColorHint="@color/material_dynamic_neutral40"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etProductName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etProductName"
        android:layout_width="374dp"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="62dp"
        android:background="@color/material_dynamic_neutral90"
        android:hint="Product Name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColorHint="@color/material_dynamic_neutral40"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panel"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etUnitPrice"
        android:layout_width="175dp"
        android:layout_height="63dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="31dp"
        android:background="@color/material_dynamic_neutral90"
        android:hint="Unit Price (1KG)"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColorHint="@color/material_dynamic_neutral40"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etdiscription"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/imgupd"
        android:layout_width="374dp"
        android:layout_height="85dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="27dp"
        android:background="@color/material_dynamic_neutral90"
        android:hint="Image URL"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColorHint="@color/material_dynamic_neutral40"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobile"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etnoofunits"
        android:layout_width="182dp"
        android:layout_height="61dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="31dp"
        android:background="@color/material_dynamic_neutral90"
        android:hint="No Of Units"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColorHint="@color/material_dynamic_neutral40"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:layout_constraintStart_toEndOf="@+id/etUnitPrice"
        app:layout_constraintTop_toBottomOf="@+id/etdiscription"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="212dp"
        android:layout_height="69dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="#4CAF50"
        android:text="Submit"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgupd"
        tools:ignore="DuplicateIds,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>